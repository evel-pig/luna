{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "lib",
    "noUnusedLocals": true,
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*"
  ]
}